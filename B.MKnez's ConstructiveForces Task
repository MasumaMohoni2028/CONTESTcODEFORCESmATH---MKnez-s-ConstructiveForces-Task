#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define op() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

int main()
{
	op();
	int t;
	cin>>t;
	while(t--)
	{
		int n;
		cin>>n;
		if(n%2==0)
		{
			cout<<"YES"<<endl;
			for(int i=0;i<n/2; i++)
			{
				cout<<"-1 1"<<" ";
			}
			cout<<endl;
		}
		else {
			if(n==3){
				cout<<"NO"<<endl;
				continue;
			}
			cout<<"YES"<<endl;
			int x=n/2;
			for(int i=0; i<n/2; i++)
			{
				cout<<1-x<<" "<<x<<" ";
			}
			cout<<1-x<<endl;
		}
	}
}
